{
  "name": "collapse-regex-char-set",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wimpyprogrammer/collapse-regex-char-set.git"
  },
  "description": "Condense a set of words into a regular expression pattern",
  "author": "Drew Keller <drew@wimpyprogrammer.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "npm run clean && babel src -d lib --extensions '.js,.ts'",
    "build-demo": "webpack --config demo/webpack.config.js",
    "clean": "rimraf lib/*",
    "format": "prettier --write 'src/**'",
    "lint": "tsc; tslint -p ./",
    "precommit": "pretty-quick --staged",
    "test": "jest --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/?*.(js|ts)",
      "!**/src/**/?*.d.ts",
      "!**/src/demo.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/src/**/?*.spec.(js|ts)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-typescript": "^7.0.0-beta.54",
    "@types/es6-shim": "^0.31.37",
    "@types/jest": "^23.3.1",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "pretty-quick": "^1.6.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "ts-loader": "^5.0.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "webpack": "^4.17.2",
    "webpack-command": "^0.4.1"
  }
}
