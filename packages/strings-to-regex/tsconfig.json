{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./",
		"checkJs": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es5",
			"es2015.collection",
			"es2015.core",
			"es2015.iterable",
			"es2017.object"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./lib",
		"pretty": true,
		"sourceMap": true,
		"strict": true
	},
	"include": ["src"]
}
